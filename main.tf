  source  = "terraform-aws-modules/eks/aws"
  version = "~> 19.0"

  cluster_name    = "my-cluster"
  cluster_version = "1.24"

  cluster_endpoint_public_access  = true

  cluster_addons = {
    coredns = {
      most_recent = true
    }
    kube-proxy = {
      most_recent = true
    }
    vpc-cni = {
      most_recent = true
    }
  }

  vpc_id                   = "vpc-0532c512c81ab8e28"
  subnet_ids               = ["subnet-0c7d7bbfd3533185a", "subnet-035d423f7eb526de6", "subnet-0605c5081606254b5"]
